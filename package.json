{
  "scripts": {
    "dev": "next dev",
    "services:up": "docker compose --file=src/infra/compose.yaml up -d",
    "services:stop": "docker compose --file=src/infra/compose.yaml stop",
    "services:down": "docker compose --file=src/infra/compose.yaml down",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate dev",
    "build": "prisma generate && next build",
    "postbuild": "prisma migrate deploy",
    "start": "next start",
    "test": "jest --runInBand --coverage --verbose --coverageReporters=text-summary --coverageReporters=html",
    "test:unit": "jest --runInBand --coverage --verbose --coverageReporters=text-summary --coverageReporters=html --testPathPatterns='src/(?!app/api)'",
    "test:integration": "jest --runInBand --coverage --verbose --coverageReporters=text-summary --coverageReporters=html --testPathPatterns='src/app/api'",
    "test:ci": "npm run test:unit",
    "test:watch": "npm test -- --watch",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integration:watch": "npm run test:integration -- --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check",
    "prettier:fix": "prettier --write",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
